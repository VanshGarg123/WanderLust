<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation"
                    enctype="multipart/form-data">
                    <h2>Edit this Listing</h2>
                    <div class="mb-3">
                        <label for="listing[title]" class="form-label">Title</label>
                        <input placeholder="Edit the title" name="listing[title]" value="<%=listing.title%>" type="text"
                            class="form-control">
                        <div class="valid-feedback">
                            Title Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="listing[description]" class="form-label">Description</label>
                        <textarea name="listing[description]" placeholder="enter description" class="form-control"
                            required><%=listing.description%></textarea>
                        <div class="invalid-feedback">
                            Please enter a short description
                        </div>
                    </div>

                    <div class="mb-3">
                        <p>Original Image</p>
                        <img src="<%-originalImageUrl%>" alt="listing.image">
                    </div>

                    <div class="mb-3">
                        <label for="listing[image]" class="form-label">Upload New Image</label>
                        <input value="<%=listing.image%>" name="listing[image]" type="file" class="form-control">
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="listing[price]" class="form-label">Price</label>
                            <input placeholder="enter price" name="listing[price]" value="<%=listing.price%>"
                                type="number" class="form-control" required>
                            <div class="invalid-feedback">
                                Price should be valid
                            </div>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="listing[country]" class="form-label">Country</label>
                            <input placeholder="enter country" name="listing[country]" value="<%=listing.country%>"
                                type="text" class="form-control" required>
                            <div class="invalid-feedback">
                                Country name should be valid
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="listing[location]" class="form-label">Location</label>
                        <input placeholder="enter location" name="listing[location]" value="<%=listing.location%>"
                            class="form-control" type="text" required>
                        <div class="invalid-feedback">
                            Location should be valid
                        </div>
                    </div>

                    <button class="btn btn-dark edit-btn mt-3">Edit</button>
                </form>
            </div>
        </div>
    </body>